<!-- !!! DO NOT EDIT THIS FILE - THESE ARE FOR GEKKO DEFAULTS ONLY !!! -->
<?xml version="1.0" encoding="UTF-8"?>
<SysConfig xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
    xsd:schemaLocation="http://6bit.net/gekko gekko-conf.xsd"
    xmlns="http://6bit.net/gekko">

    <!-- General system setting-->
    <General>
        <EnableMultiCore>true</EnableMultiCore>
        <EnableIdleSkipping>true</EnableIdleSkipping>
        <EnableHLE>true</EnableHLE>
        <EnableAutoBoot>true</EnableAutoBoot>
        <EnableCheats>false</EnableCheats>
        <DefaultBootFile/>
        <DVDImagePaths/>
    </General>

    <!-- Debug settings -->
    <Debug>
        <EnableShowFPS>true</EnableShowFPS>
        <EnableDumpOpcode0>false</EnableDumpOpcode0>
        <EnablePauseOnUnknownOpcode>true</EnablePauseOnUnknownOpcode>
        <EnableDumpGCMReads>false</EnableDumpGCMReads>
    </Debug>

    <!-- Settings applicable to boot -->
    <Boot>
        <EnableIPL>false</EnableIPL>
        <Patches/>
        <Cheats/>
    </Boot>

    <!-- Settings applicable to the PowerPC CPU core -->
    <PowerPC core="dynarec" freq="486">
        <Core name="interpreter"/>
        <Core name="dynarec"/>
    </PowerPC>

    <!-- Settings applicable to the video core -->
    <Video renderer="opengl_2_0">

        <EnableFullscreen>true</EnableFullscreen>
        <WindowResolution>1024_768</WindowResolution>
        <FullscreenResolution>1440_900</FullscreenResolution>

        <!-- OpenGL 2.0 renderer -->
        <Renderer name="opengl_2_0">
            <EnableWireframe>false</EnableWireframe>
            <EnableShaders>true</EnableShaders>
            <EnableTextures>false</EnableTextures>
            <EnableTextureDumping>false</EnableTextureDumping>
            <EnableForceAlpha>false</EnableForceAlpha>
            <AntiAliasingMode>0</AntiAliasingMode>
            <AnistropicFilteringMode>0</AnistropicFilteringMode>
        </Renderer>

        <!-- OpenGL 3.2 renderer -->
        <Renderer name="opengl_3_3">
            <EnableWireframe>false</EnableWireframe>
        </Renderer>
    </Video>

    <!-- Example of configuring emulated input devices -->
    <Devices>
        <GameCube>
            <!-- Standard memory card example -->
            <MemSlot slot="a" device="memcard" enable="false"/>

            <!-- Standard controller example -->
            <ControllerPort port="0" device="controller" enable="true">
                <!-- Keyboard configuration example - codes are in ASCII decimal -->
                <KeyboardController enable="true">
                    <!-- Default: "X" key -->
                    <AKey>120</AKey>
                    <!-- Default: "Z" key -->
                    <BKey>122</BKey>
                    <!-- Default: "C" key -->
                    <XKey>99</XKey>
                    <!-- Default: "S" key -->
                    <YKey>115</YKey>
                    <!-- Default: "Q" key -->
                    <LKey>113</LKey>
                    <!-- Default: "W" key -->
                    <RKey>119</RKey>
                    <!-- Default: "D" key -->
                    <ZKey>100</ZKey>
                    <!-- Default: Enter -->
                    <StartKey>13</StartKey>
                    <!-- Default: Up Arrow -->
                    <AnalogUpKey>1073741906</AnalogUpKey>
                    <!-- Default: Down Arrow -->
                    <AnalogDownKey>1073741905</AnalogDownKey>
                    <!-- Default: Left Arrow -->
                    <AnalogLeftKey>1073741904</AnalogLeftKey>
                    <!-- Default: Right Arrow -->
                    <AnalogRightKey>1073741903</AnalogRightKey>
                    <!-- Default: "I" key -->
                    <CUpKey>105</CUpKey>
                    <!-- Default: "K" key -->
                    <CDownKey>107</CDownKey>
                    <!-- Default: "J" key -->
                    <CLeftKey>106</CLeftKey>
                    <!-- Default: "L" key -->
                    <CRightKey>108</CRightKey>
                    <!-- Default: "T" key -->
                    <DPadUpKey>116</DPadUpKey>
                    <!-- Default: "G" key -->
                    <DPadDownKey>103</DPadDownKey>
                    <!-- Default: "F" key -->
                    <DPadLeftKey>102</DPadLeftKey>
                    <!-- Default: "H" key -->
                    <DPadRightKey>104</DPadRightKey>
                </KeyboardController>
            </ControllerPort>
        </GameCube>
    </Devices>
</SysConfig>
