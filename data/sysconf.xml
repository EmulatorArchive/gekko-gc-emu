<?xml version="1.0" encoding="UTF-8"?>
<SysConfig xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
    xsd:schemaLocation="http://6bit.net/gekko gekko-conf.xsd"
    xmlns="http://6bit.net/gekko">

    <!-- General system setting-->
    <General>
        <EnableMultiCore>true</EnableMultiCore> <!-- Not implemented -->
        <EnableIdleSkipping>false</EnableIdleSkipping> <!-- Not implemented -->
        <EnableHLE>true</EnableHLE>
        <EnableAutoBoot>true</EnableAutoBoot>
        <EnableCheats>false</EnableCheats> <!-- Not implemented -->
        <DefaultBootFile/>
        <DVDImagePaths/>
    </General>

    <!-- Debug settings -->
    <Debug>
        <EnableShowFPS>true</EnableShowFPS>
        <EnableDumpOpcode0>false</EnableDumpOpcode0>
        <EnablePauseOnUnknownOpcode>true</EnablePauseOnUnknownOpcode>
        <EnableDumpGCMReads>false</EnableDumpGCMReads>
    </Debug>

    <!-- Settings applicable to boot -->
    <Boot>
        <EnableIPL>false</EnableIPL> <!-- Not implemented -->
        <Patches/>
        <Cheats/>
    </Boot>

    <!-- Settings applicable to the PowerPC CPU core -->
    <PowerPC core="interpreter" freq="486">
        <Core name="interpreter"/>
        <Core name="dynarec"/>
    </PowerPC>

    <!-- Settings applicable to the video core -->
    <Video renderer="opengl3">
        <EnableFullscreen>true</EnableFullscreen> <!-- Not implemented -->
        <WindowResolution>1024_768</WindowResolution> <!-- Not implemented -->
        <FullscreenResolution>1440_900</FullscreenResolution> <!-- Not implemented -->

        <!-- OpenGL 3 renderer -->
        <Renderer name="opengl3">
            <EnableWireframe>false</EnableWireframe> <!-- Not implemented -->
            <EnableShaders>true</EnableShaders> <!-- Not implemented -->
            <EnableTextures>true</EnableTextures> <!-- Not implemented -->
            <EnableTextureDumping>false</EnableTextureDumping> <!-- Not implemented -->
            <EnableForceAlpha>false</EnableForceAlpha> <!-- Not implemented -->
            <AntiAliasingMode>0</AntiAliasingMode> <!-- Not implemented -->
            <AnistropicFilteringMode>0</AnistropicFilteringMode> <!-- Not implemented -->
        </Renderer>
    </Video>

    <!-- Example of configuring emulated input devices -->
    <Devices>
        <GameCube>
            <!-- Standard memory card example -->
            <MemSlot slot="a" device="memcard" enable="true"/> <!-- Not implemented -->

            <!-- Standard controller example -->
            <ControllerPort port="0" device="controller" enable="true">
                <!-- Keyboard configuration example - codes are for GLFW -->
                <KeyboardController enable="true">
                    <!-- Default: "X" key -->
                    <AKey>88</AKey>
                    <!-- Default: "Z" key -->
                    <BKey>90</BKey>
                    <!-- Default: "C" key -->
                    <XKey>67</XKey>
                    <!-- Default: "S" key -->
                    <YKey>83</YKey>
                    <!-- Default: "Q" key -->
                    <LKey>81</LKey>
                    <!-- Default: "W" key -->
                    <RKey>87</RKey>
                    <!-- Default: "D" key -->
                    <ZKey>68</ZKey>
                    <!-- Default: Enter -->
                    <StartKey>257</StartKey>
                    <!-- Default: Up Arrow -->
                    <AnalogUpKey>265</AnalogUpKey>
                    <!-- Default: Down Arrow -->
                    <AnalogDownKey>264</AnalogDownKey>
                    <!-- Default: Left Arrow -->
                    <AnalogLeftKey>263</AnalogLeftKey>
                    <!-- Default: Right Arrow -->
                    <AnalogRightKey>262</AnalogRightKey>
                    <!-- Default: "I" key -->
                    <CUpKey>73</CUpKey>
                    <!-- Default: "K" key -->
                    <CDownKey>75</CDownKey>
                    <!-- Default: "J" key -->
                    <CLeftKey>74</CLeftKey>
                    <!-- Default: "L" key -->
                    <CRightKey>76</CRightKey>
                    <!-- Default: "T" key -->
                    <DPadUpKey>84</DPadUpKey>
                    <!-- Default: "G" key -->
                    <DPadDownKey>71</DPadDownKey>
                    <!-- Default: "F" key -->
                    <DPadLeftKey>70</DPadLeftKey>
                    <!-- Default: "H" key -->
                    <DPadRightKey>72</DPadRightKey>
                </KeyboardController>

                <!-- Joypad configuration example - codes based on pad syms -->
                <!-- See "Joypad Configuration" Wiki entry on Google Code page -->
                <JoypadController enable="false">
                    <!-- Button Joypad Config -->
                    <AKey>101</AKey>
                    <BKey>100</BKey>
                    <XKey>102</XKey>
                    <YKey>103</YKey>
                    <LKey>104</LKey>
                    <RKey>105</RKey>
                    <ZKey>106</ZKey>
                    <StartKey>109</StartKey>
                    <!-- Analog Joypad Config -->
                    <AnalogUpKey>202</AnalogUpKey>
                    <AnalogDownKey>203</AnalogDownKey>
                    <AnalogLeftKey>200</AnalogLeftKey>
                    <AnalogRightKey>201</AnalogRightKey>
                    <!-- C Stick Joypad Config -->
                    <CUpKey>206</CUpKey>
                    <CDownKey>207</CDownKey>
                    <CLeftKey>204</CLeftKey>
                    <CRightKey>205</CRightKey>
                    <!-- DPad Joypad Config -->
                    <DPadUpKey>210</DPadUpKey>
                    <DPadDownKey>211</DPadDownKey>
                    <DPadLeftKey>208</DPadLeftKey>
                    <DPadRightKey>209</DPadRightKey>
                </JoypadController>
            </ControllerPort>
            
            <!-- Note: Enable all controllers by default. This makes SSBM boot and does no harm -->
            <ControllerPort port="1" device="controller" enable="true"/>
            <ControllerPort port="2" device="controller" enable="true"/>
            <ControllerPort port="3" device="controller" enable="true"/>
        </GameCube>
    </Devices>
</SysConfig>
